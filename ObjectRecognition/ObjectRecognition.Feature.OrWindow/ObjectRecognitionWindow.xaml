<UserControl x:Class="ObjectRecognition.Feature.OrWindow.ObjectRecognitionWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ObjectRecognition.Feature.OrWindow"
              xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"

             mc:Ignorable="d" Width="1063" Height="560">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid x:Name="leftGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="130" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border Margin="10,0,10,10" Grid.Row="1" Background="White" BorderBrush="#FFEAECF0" BorderThickness="1" CornerRadius="5">
                
            </Border>
        </Grid>
        <Grid x:Name="rightGrid" Grid.Column="1" >
            <ScrollViewer x:Name="images1" VerticalScrollBarVisibility="Auto" Template="{DynamicResource ScrollViewerControlTemplate}" Padding="5">
                <WrapPanel x:Name="displayHost"/>
            </ScrollViewer>
        </Grid>
    </Grid>

</UserControl>