<UserControl x:Class="ObjectRecognition.Feature.MainPageControls.SideMenuControls.CategoryButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ObjectRecognition.Feature.MainPageControls.SideMenuControls"
             mc:Ignorable="d" d:DesignWidth="290" Height="70">
    <Grid Height="70" VerticalAlignment="Top">
        <Grid x:Name="Body" HorizontalAlignment="Left" Height="50" Margin="10,10,0,0" VerticalAlignment="Top" Width="270" MouseEnter="Body_MouseEnter" MouseLeave="Body_MouseLeave" MouseLeftButtonDown="Body_MouseLeftButtonDown" MouseLeftButtonUp="Body_MouseLeftButtonUp">
            <Rectangle x:Name="BodyRectangle" Fill="#FFF4F5F7" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="270" RadiusX="10" RadiusY="10"/>
            <Image x:Name="Icon" HorizontalAlignment="Left" Height="25" Margin="36,13,0,0" VerticalAlignment="Top" Width="25"/>
            <Label x:Name="Title" Content="Category button title" HorizontalAlignment="Left" Margin="76,12,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Ubuntu Light" Foreground="#FF4C5C76" TextOptions.TextHintingMode="Fixed"/>
        </Grid>

    </Grid>
</UserControl>
