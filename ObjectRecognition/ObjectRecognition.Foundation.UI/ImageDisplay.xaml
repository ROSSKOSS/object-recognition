<UserControl x:Class="ObjectRecognition.Foundation.UI.ImageDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ObjectRecognition.Foundation.UI"
             mc:Ignorable="d" Height="177.334" Width="200" MouseLeftButtonUp="UserControl_MouseLeftButtonUp">
    <Grid>
        
        <Border x:Name="body"  Background="White" CornerRadius="5" BorderBrush="#FFEBF0EA" BorderThickness="1" Padding="5">
            <Image x:Name="image" StretchDirection="DownOnly"/>
        </Border>
<Rectangle x:Name="deletedMarker" RadiusX="5" RadiusY="5" Opacity="0.4"/>
    </Grid>
</UserControl>
